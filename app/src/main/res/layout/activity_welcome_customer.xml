<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeCustomer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="100px" />

        <TextView
            android:id="@+id/welcomeHomeowner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="(Displays username/name)"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/homeownerRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="(Displays role)"
            android:textAlignment="center"
            android:textSize="20sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="100px" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What would you like to do today?"
            android:textAlignment="center"
            android:textSize="20sp"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/ServiceAvailable"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="OnServiceAvailableButtonClick"
            android:text="See Available Services" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20px" />

        <Button
            android:id="@+id/ServiceBooked"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="OnServiceBookedButtonClick"
            android:text="See Booked Services" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
